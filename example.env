# Firma de JWT
JWT_SECRET="secret" 

# Uso de Recaptcha Para Registros
use_recaptcha=false # Para activar el Recaptcha, Reemplazar false con true
recaptcha_secret="yourRecaptchaSecret" # Obtener keys en https://www.google.com/recaptcha/admin/create?hl=es-419
recaptcha_site_key="yourRecaptchaKey" # Obtener keys en https://www.google.com/recaptcha/admin/create?hl=es-419

# Apartado de Correo
new_user_verification=true # Requerir que un usuario deba verificarse para utilizar la api
smtp_host="smtp-relay.brevo.com" # Host SMTP
smtp_port=587 # Puerto SMTP
smtp_user="user" # Usuario SMTP
smtp_password="password" # Contrase√±a SMTP
smtp_is_secure=false # Si tu puerto SMTP es 465, Cambia esto a true

#Limites de cara usuario
free_user_limit=50
premium_user_limit=10000
